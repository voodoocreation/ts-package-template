{
  "name": "ts-package-template",
  "version": "1.0.0",
  "description": "A template repository for an NPM package that supports TypeScript, as well as exporting CLI commands.",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "Raice Hannay <voodoocreation@gmail.com>",
  "repository": "https://github.com/voodoocreation/ts-package-template",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf \"!(node_modules)/*.{js,d.ts,map}\" \"*.{js,d.ts,map}\"",
    "prepack": "yarn clean && yarn tsc",
    "format": "prettier --write \"**/*.{json,ts,tsx}\"",
    "lint": "eslint \"**/*.ts?(x)\"",
    "lint:fix": "yarn format && yarn lint --fix",
    "test": "jest",
    "test:all": "yarn lint:fix && yarn test --coverage"
  },
  "files": [
    "**/index.js",
    "**/*.d.ts"
  ],
  "bin": {
    "greeting": "cli.js"
  },
  "devDependencies": {
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-voodoocreation": "^3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.36.2",
    "jest-environment-jsdom": "^29.0.3"
  }
}
